<div class="jumbotron text-center">
	<h1 style="text-transform: uppercase;">New Post</h1>
</div>

<%= form_for @post do |f| %>
  <div class="row">
  	<div class="col-xs-6 col-xs-offset-3">
		<h4><%= f.label :description %></h4>
		<%= f.text_area :description, class:"form-control", style:"max-width:450px; max-height: 150px; height: 150px;" %><br>
		<%= f.submit "Submit", class:"btn btn-primary" %>
	</div>	
  </div>
<% end %>
